<div style="width:100%; text-align: center;">
    <span style="font-size: 40px;"><strong>Cart</strong></span>
</div>
<div class="cart-container">
    <div class="cart-main">
        <div class="checkbox">
            <input type="checkbox" id="checkbox-select-all">
            <span>Select All</span>
        </div>
    </div>
    {{#if itemCart}}
    {{#each itemCart}}
    <div class="item-wrapper">
        <div class="checkbox column">
            <input type="checkbox" id="checkbox-select">
        </div>
        <div class="img column">
            <img src="/img/products/{{this.image}}" style="width: 80px; height: 60px;">
        </div>
        <div class="title column">{{this.title}}</div>
        <div class="amount column">{{this.quantity}}</div>
        <div class="remove column">
            <form action="/cart/{{this.id}}/delete" method="POST">
                <button type="submit" class="button-hide">
                    <i class="fa-solid fa-trash-can"></i>
                </button>
            </form>
        </div>
    </div>
    {{/each}}
    {{else}}
    <div class="noti">You have no items in your shopping cart</div>
    {{/if}}
    <script src="/js/cart.js"></script>
</div>