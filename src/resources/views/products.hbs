<div class="products-container">
    <div class="title">
        <h1>{{title_top}}</h1>
    </div>
    <div class="search-bar">
        <input type="text" name="search-box" id="search-box" placeholder="Search">
        <i class="fa-solid fa-magnifying-glass search-btn"></i>
        <i class="fa-solid fa-arrow-up-1-9 priceAscending"></i>
        <i class="fa-solid fa-arrow-down-9-1 priceDescending"></i>
    </div>
    <div class="product-container">
        {{#if product}}
        {{#each product}}
        <div class="product">
            <a href="">
                <div class="product-wrapper-1">
                    <div class="img-product">
                        <img src="/img/products/{{this.image}}" loading="lazy">
                    </div>
                    <div class="title-product">
                        <span>{{this.title}}</span>
                    </div>
                    <div class="description-product">
                        <span>{{this.description}}</span>    
                    </div><br>
                    <div class="price-product">
                        <span style="color:green">{{this.price}} $</span>    
                    </div>
                </div>
            </a>
            <div class="product-wrapper-2">
                <div class="choose-product">
                    <div class="like-product item-choose">
                        <i class="fa-solid fa-heart"></i>
                    </div>
                    <div class="cart-product item-choose" data-item-value="{{this.id}}">
                        <i class="fa-solid fa-cart-shopping"></i>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
        {{else}}
        <div class="not-found" style="margin: 100px 0 270px 0;">
            <span style="font-size: 50px; color: rgb(154, 153, 153);">Item not found</span>
        </div>
        {{/if}}
    </div>
</div>
<script src="/js/product.js"></script>